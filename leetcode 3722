class Solution:
    def lexSmallest(self, s: str) -> str:
        n = len(s)
        ans = s
        
        for k in range(1, n + 1):
            t1 = s[:k][::-1] + s[k:]
            
            t2 = s[:n - k] + s[n - k:][::-1]
            
            if t1 < ans:
                ans = t1
            if t2 < ans:
                ans = t2
        
        return ans
